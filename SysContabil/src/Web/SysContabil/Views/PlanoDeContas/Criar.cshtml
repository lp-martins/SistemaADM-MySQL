@model SysContabil.Models.PlanoDeContasViewModel

@{
    ViewData["Title"] = "Criar";
}
<h2>Contas</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroDaConta" class="control-label"></label>
                <input asp-for="NumeroDaConta" class="form-control" />
                <span asp-validation-for="NumeroDaConta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeDaConta" class="control-label"></label>
                <input asp-for="NomeDaConta" class="form-control" />
                <span asp-validation-for="NomeDaConta" class="text-danger"></span>
            </div>
            <div class="text-success text-center">
                @if (TempData["Mensagem"] != null)
                {
                    <div class="text-success">
                        <hr />
                        @TempData["Mensagem"]
                        <hr />
                    </div>
                }
            </div>
            <div class="row text-center">
                <div class="col-md-3">
                    <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Voltar</a>
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Salvar" class="btn btn-success" />
                </div>
                <div class="col-md-3">
                    <a type="button" class="btn btn-outline-primary" asp-controller="PlanoDeContas" asp-action="Criar">Novo</a>
                </div>
                <div class="col-md-4">
                    <a type="button" class="btn btn-outline-info" asp-controller="PlanoDeContas" asp-action="ListarContas">Ver Contas</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
