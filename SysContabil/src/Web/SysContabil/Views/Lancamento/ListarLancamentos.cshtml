@model IEnumerable<SysContabil.Models.LancamentoViewModel>

@{
    ViewData["Title"] = "ListarLancamentos";
}

<h2>Editar Lancamentos</h2>

<p>
    <a class="btn btn-dark" asp-action="Criar">Voltar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataDoPlano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Debito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credito)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataDoPlano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Debito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credito)
            </td>
            <td>
                <div class="btn btn-outline-success">
                    @Html.ActionLink("Alterar", "Alterar", new { id = item.Id })
                </div>
                |||
                <div class="btn btn-outline-info">
                    @Html.ActionLink("Detalhar", "Detalhar", new { id = item.Id })
                </div>
                |||
                <div class="btn btn-outline-danger">
                    @Html.ActionLink("Excluir", "Excluir", new { id = item.Id })
                </div>   
            </td>
        </tr>
}
    </tbody>
</table>
